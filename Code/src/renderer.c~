#include "global.h"
#include "player.h"
#include "raster.h"
#include "model.h"

void render_player(const struct Player *player, UINT32 *base) {
    plot_bitmap_32(base,
                   player->position_x,
                   player->position_y,
                   playerBody[player->aim_direction],
                   14);
    plot_bitmap_32(base,
                   player->position_x,
                   player->position_y+14,
                   playerStep[player->move_direction][player->step],
                   5);
}

void render_zombie(const struct Zombie *zombie, UINT32 *base) {
    plot_bitmap_32(base,
                   zombie->position_x,
                   zombie->position_y,
                   playerBody[zombie->direction],
                   14);
}
