void draw_player( UINT32 *base, int x, int y, int directionLook, int directionMove, int step ) {
    plot_bitmap_32(base,x,y, playerBody[directionLook],22);
    plot_bitmap_32(base,x,y+22, playerStep[directionMove][step],5);

}
